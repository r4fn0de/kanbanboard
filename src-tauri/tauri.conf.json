{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Modulo",
  "version": "1.0.0",
  "identifier": "com.novon.modulo",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Modulo",
        "width": 800,
        "height": 600,
        "minWidth": 1300,
        "minHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true,
        "shadow": false,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": [
            "hudWindow"
          ],
          "radius": 12,
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "r4fn0de",
    "category": "DeveloperTool",
    "shortDescription": "A lightweight, elegant offline kanban board for productivity",
    "longDescription": "Modulo is a kanban board application designed for developers, entrepreneurs, and creators who prefer productivity without depending on the cloud. Built with modern technologies for a fast, offline-first desktop experience.",
    "copyright": "Copyright Â© 2025 r4fn0de. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/r4fn0de/kanbanboard/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFQzBCQjA5NUY3NzEyQTYKUldTbUVuZGZDYnZBUG5Kcnp4T1hCRUNuRmEveCt1VFVaNkQ5WHJCQ2t5akZCM0lKMDhGYnJUVnYK"
    }
  }
}
